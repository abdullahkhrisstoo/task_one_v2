@inject IConfiguration Configuration
@{
    var externalLinks = Configuration.GetSection("ExternalLinks");
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Gordon Ramsay</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="\home\img\gordon_ramsay.jpg" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&family=Pacifico&display=swap"
          rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/home/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/home/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/home/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/home/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/home/css/style.css" rel="stylesheet">

</head>

<body>
    <div class="bg-white p-0">
        <!-- Spinner Start -->
        <div id="spinner"
             class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Navbar & Hero Start -->
        <div class="position-relative p-0">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4 px-lg-5 py-3 py-lg-0">
                <a href="" class="navbar-brand p-0">

                    <h1 class="text-primary m-0">
                        <img src="\home\img\gordon_ramsay.jpg" alt=""
                             class=" rounded-circle ">  gordon ramsay
                    </h1>

                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav ms-auto py-0 pe-4">
                        <a asp-controller="Home" asp-action="Home" class="nav-item nav-link @(Context.Request.Path == "/Home/Home" ? "active" : "")">Home</a>
                        <a asp-controller="Home" asp-action="About" class="nav-item nav-link @(Context.Request.Path == "/Home/About" ? "active" : "")">About</a>
                        <a asp-controller="Home" asp-action="Services" class="nav-item nav-link @(Context.Request.Path == "/Home/Services" ? "active" : "")">Service</a>

                        <a asp-controller="Home" asp-action="Menu" class="nav-item nav-link @(Context.Request.Path == "/Home/Menu" ? "active" : "")">Menu</a>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Pages</a>
                            <div class="dropdown-menu m-0">
                                <a asp-controller="Home" asp-action="Booking" class="dropdown-item">Booking</a>
                                <a asp-controller="Home" asp-action="OurTeam" class="dropdown-item">Our Team</a>
                                <a asp-controller ="Home" asp-action="Testimonial" class="dropdown-item">Testimonial</a>
                            </div>
                        </div>
                        <a asp-controller="Home" asp-action="Contact" class="nav-item nav-link @(Context.Request.Path == "/Home/Contact" ? "active" : "")">Contact</a>
                    </div>
                    <a asp-controller="Auth" asp-action="Login" class="btn btn-primary py-2 px-4">Login</a>
                </div>

            </nav>


        </div>
        @RenderBody()
        <div class="container-fluid bg-dark text-light footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
            <div class="container py-5">
                <div class="row g-5">
                    <div class="col-lg-4 col-md-6">
                        <h4 class="section-title ff-secondary text-start text-primary fw-normal mb-4">Company</h4>
                        <a class="btn btn-link" asp-controller="Home" asp-action="About">About Us</a>
                        <a class="btn btn-link" asp-controller="Home" asp-action="Contact">Contact Us</a>
                        <a class="btn btn-link" asp-controller="Home" asp-action="PrivicyPolicy">Privacy Policy</a>
                        <a class="btn btn-link" asp-controller="Home" asp-action="TermsAndCondition">Terms & Condition</a>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <h4 class="section-title ff-secondary text-start text-primary fw-normal mb-4">Contact</h4>
                        <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>123 Street, New York, USA</p>
                        <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>+012 345 67890</p>
                        <p class="mb-2"><i class="fa fa-envelope me-3"></i>info@example.com</p>
                        <div class="d-flex pt-2">
                            <a class="btn btn-outline-light btn-social" href="@Configuration["ExternalLinks:Facebook"]"><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-outline-light btn-social" href="@Configuration["ExternalLinks:Twitter"]"><i class="fab fa-twitter"></i></a>
                            <a class="btn btn-outline-light btn-social" href="@Configuration["ExternalLinks:YouTube"]"><i class="fab fa-youtube"></i></a>
                        </div>

                    </div>

                    <div class="col-lg-4 col-md-6">
                        <h4 class="section-title ff-secondary text-start text-primary fw-normal mb-4">Newsletter</h4>
                        <p>Dolor amet sit justo amet elitr clita ipsum elitr est.</p>
                        <div class="position-relative mx-auto" style="max-width: 400px;">
                            <input class="form-control border-primary w-100 py-3 ps-4 pe-5" type="text"
                                   placeholder="Your email">
                            <button type="button"
                                    class="btn btn-primary py-2 position-absolute top-0 end-0 mt-2 me-2">
                                SignUp
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="copyright">
                    <div class="row">
                        <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                            &copy; <a class="border-bottom" href="#">Gordon Ramsay</a>, All Right Reserved.
                        </div>
                        <div class="col-md-6 text-center text-md-end">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/home/lib/wow/wow.min.js"></script>
    <script src="~/home/lib/easing/easing.min.js"></script>
    <script src="~/home/lib/waypoints/waypoints.min.js"></script>
    <script src="~/home/lib/counterup/counterup.min.js"></script>
    <script src="~/home/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/home/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/home/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/home/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>
    <!-- Template Javascript -->
    <script src="~/home/js/main.js"> </script>
</body>

</html>